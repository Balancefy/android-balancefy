<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="5dp"
    android:background="@color/black_balancefy"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_balancefy"
        android:padding="10dp"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/tv_titlePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_balancefy"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            android:text="Titulo aleatorio">

        </TextView>

        <TextView
            android:id="@+id/tv_textPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Texto aleatorio">

        </TextView>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_post_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_post_comments">
            </ImageView>

            <TextView
                android:id="@+id/tv_post_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="11"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/ic_post_likes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_post_likes_disable"/>

            <TextView
                android:id="@+id/tv_post_likes"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/ic_post_timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_post_timer">

            </ImageView>

            <TextView
                android:id="@+id/tv_post_timer"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="11"
                android:textSize="16sp"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>