<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_balancefy"
    tools:context=".activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/background_profile"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/fundo_perfil"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar_profile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/bruno"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/name_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bruno Ferreira"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/type_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfil Ricasso"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/green_balancefy"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line"
                android:layout_marginTop="5sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>