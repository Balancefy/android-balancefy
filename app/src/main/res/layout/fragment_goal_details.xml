<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_balancefy"
    android:paddingTop="50dp"
    tools:context=".frames.GoalFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.balancefy.balancefyapp.components.GoalDetails
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:goal_details_title="Viagem"
            app:remaining_days="10"/>

        <com.balancefy.balancefyapp.components.GoalProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:total_score="1600xp"/>

        <com.balancefy.balancefyapp.components.CurrentTask
            android:id="@+id/current_task"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:current_task_title="Economizar"
            app:current_task_description="Reservar 20 reais por mÃªs, durante 2 meses"
            app:score="+400xp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/transaction"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <com.balancefy.balancefyapp.components.Transaction
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:category="Lazer"
                    app:date="20 de fev, 2022"
                    app:description="Netflix"
                    app:type="out"
                    app:value="23,00" />

                <com.balancefy.balancefyapp.components.Transaction
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:category="Outros"
                    app:date="25 de fev, 2022"
                    app:description="Mesada"
                    app:value="50,00" />

                <com.balancefy.balancefyapp.components.Transaction
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:category="Lazer"
                    app:date="30 de fev, 2022"
                    app:description="Prime"
                    app:type="out"
                    app:value="10,00" />

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:cornerRadius="5dp"
            android:textStyle="bold"
            android:text="@string/add_transaction"
            android:layout_gravity="center"/>
    </LinearLayout>
</FrameLayout>